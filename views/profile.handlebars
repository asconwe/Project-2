<div class="menu">
    <button id="add-activity">Add something to your bucket list! +</button>
</div>
<div class="bucket-list">
    <h2>{{profile.username}}</h2>
    <h1 class="banner">My BuckIt List</h1>
    <h2 class="category">Open activities</h2>
    {{#each profile.activity}}
        {{#unless this.complete}}
            <div class="activity open">
                <h3 class="activity-name">{{this.itemName}}</h3>
                <h4 class="activity-location">{{this.location}}</h4>
            </div>
        {{/unless}}
    {{/each}}
    <h2 class="category">Completed activities</h2>
    {{#each profile.activity}}
        {{#if this.complete}}
            <div class="activity complete">
                <h3 class="activity-name">{{this.itemName}}</h3>
                <h4 class="activity-location">{{this.location}}</h4>
            </div>
        {{/if}}
    {{/each}}
</div>